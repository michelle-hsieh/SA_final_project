<?xml version="1.0" encoding="utf-8"?>
<!--此檔案是用在 最新美食日記裡的-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="#E8E8E8">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/food2"/>

    <TextView
        android:id="@+id/diary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:text="place name"
        android:textColor="#000"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/diary_second"
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diary_title"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diary_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="diary_datediary_date"
            android:textColor="#696969"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/diary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="123123"
            android:textColor="#696969"
            android:textSize="18dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/page_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diary_second"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/place_blank"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="4"/>

        <Button
            android:id="@+id/diary_Button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:text="前去食記" />

    </LinearLayout>

</RelativeLayout>